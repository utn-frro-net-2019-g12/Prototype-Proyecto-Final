@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<a href="@Url.Action("AddOrEdit", "Product");" class="btn btn-primary"><i class="fa fa-plus"></i> Create New </a>
<hr />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
